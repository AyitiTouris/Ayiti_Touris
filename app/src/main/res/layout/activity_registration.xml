<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/loginfond">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="true"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/logo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.2"
                android:src="@mipmap/ayiti"
                android:textColor="#fff"
                android:textSize="25sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="320dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginBottom="6dp"

                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:background="@drawable/button_background2"
                android:elevation="4dp"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:paddingTop="8dp"
                android:layout_weight="0.21">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center_horizontal"
                    android:text="Enregistrer"
                    android:textStyle="bold"
                    android:textColor="@color/facebook_brand_color" />


                <EditText
                    android:id="@+id/nameField"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="24dp"
                    android:drawableLeft="@drawable/ic_action_user"
                    android:drawablePadding="6dp"
                    android:hint="Identifiant"
                    android:inputType="textPersonName|textNoSuggestions|textCapWords"
                    android:paddingBottom="20dp"
                    android:textColor="#424242"
                    android:textColorHint="#44000000"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:theme="@style/EditTextStyle2" />

                <EditText
                    android:id="@+id/emailField"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="8dp"
                    android:drawableLeft="@drawable/ic_email"
                    android:drawablePadding="6dp"
                    android:hint="Email"
                    android:inputType="textPersonName|textNoSuggestions|textCapWords"
                    android:paddingBottom="20dp"
                    android:textColor="#424242"
                    android:textColorHint="#44000000"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:theme="@style/EditTextStyle2" />



                <EditText
                    android:id="@+id/passwordField"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="8dp"
                    android:drawableLeft="@drawable/ic_lock"
                    android:drawablePadding="6dp"
                    android:hint="Mot de passe"
                    android:inputType="textPassword"
                    android:paddingBottom="20dp"
                    android:textColor="#424242"
                    android:textColorHint="#44000000"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:theme="@style/EditTextStyle2" />


                <EditText
                    android:id="@+id/passwordConfirmField"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="8dp"
                    android:drawableLeft="@drawable/ic_lock"
                    android:drawablePadding="6dp"
                    android:hint="Confirmer Mot de passe"
                    android:inputType="textPassword"
                    android:paddingBottom="20dp"
                    android:textColor="#424242"
                    android:textColorHint="#44000000"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:theme="@style/EditTextStyle2" />


                <Button
                    android:id="@+id/registerButton"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/button_background_rectangular_white"
                    android:text="Enregistrer"
                    android:textColor="@color/facebook_brand_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/register_prompt"
                    android:id="@+id/registerPromptText"
                    android:textColor="@android:color/background_dark"
                    android:paddingTop="@dimen/view_vertical_margin"
                    android:paddingBottom="@dimen/view_vertical_margin"
                    android:layout_marginTop="8dp"
                    android:textSize="14sp"

                    />
            </LinearLayout>

            <TextView
                android:id="@+id/Read"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.2"
                android:gravity="bottom|center_horizontal"
                android:paddingBottom="24dp"
                android:text="@string/plustard"
                android:textColor="#fff"
                android:textSize="12sp" />


        </LinearLayout>
    </ScrollView>


</RelativeLayout>

